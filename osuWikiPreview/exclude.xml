<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter xmlns="" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://github.com/spotbugs/filter/3.0.0 https://raw.githubusercontent.com/spotbugs/spotbugs/3.1.0/spotbugs/etc/findbugsfilter.xsd">
  <!-- https://spotbugs.readthedocs.io/en/stable/filter.html -->

  <Match>
    <Or>
      <Bug pattern="EI_EXPOSE_REP"/>
      <Bug pattern="EI_EXPOSE_REP2"/>
      <Bug pattern="EI_EXPOSE_STATIC_REP2"/>
      <Bug pattern="MS_CANNOT_BE_FINAL"/>
      <Bug pattern="MS_EXPOSE_REP"/>
      <Bug pattern="MS_PKGPROTECT"/>
      <Bug pattern="REC_CATCH_EXCEPTION"/>
      <Bug pattern="CI_CONFUSED_INHERITANCE"/>
      <Bug pattern="CT_CONSTRUCTOR_THROW"/>
    </Or>
  </Match>
  
  <Match>
    <Class name="dev.roanh.wiki.Main"/>
    <Bug pattern="DMI_HARDCODED_ABSOLUTE_FILENAME"/>
  </Match>
  
  <Match>
    <!-- For testing and this is not a true singleton -->
    <Class name="dev.roanh.wiki.github.GitHub"/>
    <Bug pattern="SING_SINGLETON_HAS_NONPRIVATE_CONSTRUCTOR"/>
  </Match>
  
  <Match>
    <Or>
      <Class name="dev.roanh.wiki.github.WebhookHandler"/>
      <Class name="dev.roanh.wiki.cmd.InstanceCommand"/>
    </Or>
    <Bug pattern="MC_OVERRIDABLE_METHOD_CALL_IN_CONSTRUCTOR"/>
  </Match>
  
  <Match>
    <!-- Should be HTML compliant not platform specific -->
    <Class name="In class dev.roanh.wiki.auth.Pages"/>
    <Bug pattern="VA_FORMAT_STRING_USES_NEWLINE"/>
  </Match>
  
</FindBugsFilter>
